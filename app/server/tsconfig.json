{
  "compilerOptions": {
    "strict": true,
    "baseUrl": "./src",
    "module": "commonjs",
    "target": "es2017",
    "skipLibCheck": true,
    "strictPropertyInitialization": false,
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "outDir": "./dist",
    "incremental": true
  },
  "exclude": ["node_modules"],
  "include": ["./src/**/*.ts", "./test/**/*.ts"]
}
